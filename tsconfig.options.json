{
  "compilerOptions": {
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "jsx": "react",
    "noEmit": true,
    "module": "es2015",
    "isolatedModules": true,
    "target": "es2018",

    // @types/reactcss required by @types/react-color is broken
    "skipLibCheck": true
  }
}
